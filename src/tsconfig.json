{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "esModuleInterop": true,
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "types": [
      "@nuxtjs/i18n"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "allowJs": true,
      "verbatimModuleSyntax": false,
      "types": [
        "node"
      ],
    },
    "require": ["mime"]
  }
}
